<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgthree"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.exalign.MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/exalignbuttonstyle"
        android:gravity="center"
        android:text="Camera"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/exalignbuttonstyle"
        android:gravity="center"
        android:text="Filter"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/exalignbuttonstyle"
        android:gravity="center"
        android:shape="rectangle"
        android:text="Align"
        android:textColor="#FFFFFF"
        android:textSize="15sp" 
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/exalignbuttonstyle"
        android:gravity="center"
        android:text="Help"
        android:textColor="#FFFFFF"
        android:textSize="15sp" 
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/title3" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Exogen Alignment Application"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Text2"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/Text2"
        android:src="@drawable/exalign_icon_3" />

</RelativeLayout>